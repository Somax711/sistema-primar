@model RendicionesPrimar.Models.ViewModels.CrearUsuarioViewModel

@{
    ViewData["Title"] = "Nuevo Empleado";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" style="margin-bottom:22px; border-radius:10px; font-size:1.08rem; font-weight:600; padding:14px 18px; display:flex; align-items:center; gap:10px; box-shadow:0 2px 8px rgba(220,53,69,0.07);">
        <i class="fas fa-times-circle" style="font-size:1.4rem; color:#dc3545;"></i>
        <span>@TempData["ErrorMessage"]</span>
    </div>
}

@if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
{
    <div class="alert alert-danger" style="margin-bottom:22px; border-radius:10px; font-size:1.08rem; font-weight:600; padding:14px 18px; display:flex; align-items:center; gap:10px; box-shadow:0 2px 8px rgba(220,53,69,0.07);">
        <i class="fas fa-times-circle" style="font-size:1.4rem; color:#dc3545;"></i>
        <div>
            <span>Por favor corrige los siguientes errores:</span>
            <ul style="margin:8px 0 0 18px; padding:0;">
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    </div>
}

