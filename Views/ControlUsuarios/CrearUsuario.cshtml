    <script>
    // === VALIDACI칍N Y FORMATEO DE RUT ===
    function formatearRut(rut) {
        rut = rut.replace(/[^0-9kK]/g, '').toUpperCase();
        if (rut.length < 2) return rut;
        let cuerpo = rut.slice(0, -1);
        let dv = rut.slice(-1);
        let cuerpoFormateado = '';
        let contador = 0;
        for (let i = cuerpo.length - 1; i >= 0; i--) {
            cuerpoFormateado = cuerpo[i] + cuerpoFormateado;
            contador++;
            if (contador === 3 && i !== 0) {
                cuerpoFormateado = '.' + cuerpoFormateado;
                contador = 0;
            }
        }
        return `${cuerpoFormateado}-${dv}`;
    }
    function validarRut(rut) {
        rut = rut.replace(/[^0-9kK]/g, '').toUpperCase();
        if (rut.length < 2) return false;
        let cuerpo = rut.slice(0, -1);
        let dv = rut.slice(-1);
        let suma = 0, multiplo = 2;
        for (let i = cuerpo.length - 1; i >= 0; i--) {
            suma += parseInt(cuerpo[i]) * multiplo;
            multiplo = multiplo === 7 ? 2 : multiplo + 1;
        }
        let dvEsperado = 11 - (suma % 11);
        let dvCalc = dvEsperado === 11 ? '0' : dvEsperado === 10 ? 'K' : dvEsperado.toString();
        return dv === dvCalc;
    }
    // === VALIDACI칍N Y FORMATEO DE TEL칄FONO ===
    function formatearTelefono(telefono, pais) {
        let t = telefono.replace(/\D/g, '');
        if (pais === 'cl') {
            if (t.length === 9 && t.startsWith('9')) return `9 ${t.slice(1,5)} ${t.slice(5,9)}`;
        }
        if (pais === 'ar') {
            if (t.length === 10 && t.startsWith('11')) return `11 ${t.slice(2,6)} ${t.slice(6,10)}`;
        }
        if (pais === 'pe') {
            if (t.length === 9 && t.startsWith('9')) return `9 ${t.slice(1,5)} ${t.slice(5,9)}`;
        }
        return telefono;
    }
    function validarTelefono(telefono, pais) {
        let t = telefono.replace(/\D/g, '');
        if (pais === 'cl') {
            return t.length === 9 && t.startsWith('9');
        }
        if (pais === 'ar') {
            return t.length === 10 && t.startsWith('11');
        }
        if (pais === 'pe') {
            return t.length === 9 && t.startsWith('9');
        }
        return false;
    }
    document.addEventListener('DOMContentLoaded', function() {
        const rutInput = document.querySelector('input[name="Rut"]');
        const rutError = rutInput.nextElementSibling;
        rutInput.addEventListener('input', function() {
            this.value = formatearRut(this.value);
            if (this.value.length > 0 && !validarRut(this.value)) {
                rutError.textContent = 'RUT inv치lido. Verifica el d칤gito verificador.';
            } else {
                rutError.textContent = '';
            }
        });
        const telInput = document.querySelector('input[name="Telefono"]');
        const telError = telInput.nextElementSibling;
        const paisSelect = document.getElementById('paisTelefono');
        telInput.addEventListener('input', function() {
            this.value = formatearTelefono(this.value, paisSelect.value);
            if (this.value.length > 0 && !validarTelefono(this.value, paisSelect.value)) {
                telError.textContent = 'Tel칠fono no v치lido para el pa칤s seleccionado.';
            } else {
                telError.textContent = '';
            }
        });
        paisSelect.addEventListener('change', function() {
            telInput.value = '';
            telError.textContent = '';
            telInput.placeholder = paisSelect.value === 'cl' ? '9 1234 5678' : paisSelect.value === 'ar' ? '11 1234 5678' : '9 1234 5678';
        });
        // Validaci칩n al enviar
        const form = document.querySelector('.user-form');
        form.addEventListener('submit', function(e) {
            if (rutInput.value.length === 0 || !validarRut(rutInput.value)) {
                rutError.textContent = 'RUT inv치lido. Verifica el d칤gito verificador.';
            } else {
                rutError.textContent = '';
            }
            if (telInput.value.length === 0 || !validarTelefono(telInput.value, paisSelect.value)) {
                telError.textContent = 'Tel칠fono no v치lido para el pa칤s seleccionado.';
            } else {
                telError.textContent = '';
            }
        });
    });
    </script>
