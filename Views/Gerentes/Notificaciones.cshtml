@model IEnumerable<RendicionesPrimar.Models.Notificacion>
@{
    ViewData["Title"] = "Notificaciones Gerente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
<style>
:root {
    --primary-blue: #215c8e;
    --primary-blue-light: #215c8e;
    --primary-blue-dark: #2a5d8a;
    --accent-teal: #215c8e;
    --accent-teal-light: #215c8e;
    --success-green: #059669;
    --success-green-light: #10b981;
    --warning-orange: #d97706;
    --danger-red: #dc2626;
    --danger-red-light: #ef4444;
    --gray-50: #f9fafb;
    --gray-100: #f3f4f6;
    --gray-200: #e5e7eb;
    --gray-300: #d1d5db;
    --gray-500: #6b7280;
    --gray-600: #4b5563;
    --gray-700: #374151;
    --gray-800: #1f2937;
    --gray-900: #111827;
    --white: #ffffff;
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    --radius-sm: 6px;
    --radius-md: 8px;
    --radius-lg: 12px;
    --radius-xl: 16px;
    --radius-2xl: 20px;
    --gradient-primary: linear-gradient(135deg, #215c8e 0%, #215c8e 100%);
    --gradient-accent: linear-gradient(135deg, #215c8e 0%, #215c8e 100%);
    --gradient-success: linear-gradient(135deg, var(--success-green) 0%, var(--success-green-light) 100%);
    --gradient-danger: linear-gradient(135deg, var(--danger-red) 0%, var(--danger-red-light) 100%);
    --gradient-background: linear-gradient(135deg, var(--gray-50) 0%, #f1f5f9 100%);
}

* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: var(--gradient-background);
    color: var(--gray-800);
    line-height: 1.6;
    font-size: 15px;
    font-weight: 400;
}

.container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 48px 32px;
}

.notifications-header {
    background: var(--white);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-xl);
    padding: 48px;
    margin-bottom: 40px;
    border: 1px solid var(--gray-200);
    position: relative;
    overflow: hidden;
}

.notifications-header::before {
    content: '';
    position: absolute;
    top: -60%;
    right: -30%;
    width: 400px;
    height: 400px;
    background: var(--gradient-primary);
    border-radius: 50%;
    opacity: 0.06;
    transform: rotate(25deg);
}

.notifications-header::after {
    content: '';
    position: absolute;
    bottom: -30%;
    left: -20%;
    width: 200px;
    height: 200px;
    background: var(--gradient-accent);
    border-radius: 50%;
    opacity: 0.04;
    transform: rotate(-45deg);
}

.notifications-header h1 {
    font-size: 3rem;
    font-weight: 800;
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0 0 16px 0;
    position: relative;
    z-index: 1;
    display: flex;
    align-items: center;
    gap: 24px;
}

.notifications-header h1 i {
    background: var(--gradient-primary);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: 2.6rem;
    animation: bellRing 4s ease-in-out infinite;
}

@@keyframes bellRing {
    0%, 100% { transform: rotate(0deg); }
    8%, 24% { transform: rotate(-12deg); }
    16%, 32% { transform: rotate(12deg); }
}

.notifications-header p {
    color: var(--gray-600);
    margin: 0;
    font-size: 1.3rem;
    position: relative;
    z-index: 1;
    font-weight: 500;
    opacity: 0.9;
}

.notifications-list {
    background: var(--white);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-xl);
    overflow: hidden;
    border: 1px solid var(--gray-200);
}

.notification-item {
    padding: 24px;
    border-bottom: 1px solid var(--gray-200);
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    position: relative;
    background: var(--white);
}

.notification-item:last-child {
    border-bottom: none;
}

.notification-item:hover {
    background: linear-gradient(135deg, var(--gray-50) 0%, #f8fafc 100%);
    transform: translateX(8px);
    box-shadow: inset 4px 0 0 var(--primary-blue-light);
}

.notification-item.unread {
    background: linear-gradient(135deg, rgba(60, 127, 183, 0.03) 0%, rgba(90, 159, 212, 0.05) 100%);
    border-left: 5px solid var(--primary-blue);
    position: relative;
}

.notification-item.unread::before {
    content: '';
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 2px;
    background: var(--gradient-primary);
}

.notification-item.unread:hover {
    background: linear-gradient(135deg, rgba(60, 127, 183, 0.08) 0%, rgba(90, 159, 212, 0.12) 100%);
    box-shadow: inset 5px 0 0 var(--primary-blue), 0 4px 20px rgba(60, 127, 183, 0.15);
}

.notification-item.read {
    background: linear-gradient(135deg, var(--gray-100) 0%, var(--gray-50) 100%);
    opacity: 0.8;
    border-left: 3px solid var(--gray-300);
}

.notification-item.read:hover {
    background: linear-gradient(135deg, var(--gray-200) 0%, var(--gray-100) 100%);
    opacity: 0.9;
}

.notification-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 12px;
    gap: 16px;
}

.notification-title {
    font-weight: 700;
    color: var(--primary-blue);
    font-size: 1.1rem;
    margin: 0;
    flex: 1;
    display: flex;
    align-items: center;
    gap: 10px;
}

.notification-title i {
    color: var(--primary-blue);
    font-size: 0.6rem;
    animation: pulse 2s infinite;
}

@@keyframes pulse {
    0% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.6; transform: scale(1.2); }
    100% { opacity: 1; transform: scale(1); }
}

.notification-time {
    color: var(--gray-500);
    font-size: 0.95rem;
    white-space: nowrap;
    font-weight: 600;
    background: linear-gradient(135deg, var(--gray-100) 0%, var(--gray-50) 100%);
    padding: 6px 12px;
    border-radius: var(--radius-md);
    border: 1px solid var(--gray-200);
    box-shadow: var(--shadow-sm);
}

.notification-message {
    color: var(--gray-700);
    line-height: 1.6;
    margin-bottom: 16px;
    font-size: 0.98rem;
    font-weight: 400;
}

/* ===== SECCIÓN CORREGIDA: BOTONES DE ACCIONES ===== */
.notification-actions {
    display: flex;
    gap: 10px;
    justify-content: flex-start;
    align-items: center;
    flex-wrap: wrap;
    margin-top: 16px;
}

.btn-action {
    border: none;
    border-radius: var(--radius-md);
    padding: 8px 16px;
    font-size: 0.85rem;
    font-weight: 600;
    min-width: 120px;
    height: 36px;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    cursor: pointer;
    text-decoration: none;
    box-shadow: var(--shadow-sm);
    position: relative;
    overflow: hidden;
}

.btn-action::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 50%;
    transform: translate(-50%, -50%);
    transition: all 0.3s ease;
}

.btn-action:hover::before {
    width: 300px;
    height: 300px;
}

.btn-action:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
}

.btn-action:active {
    transform: translateY(0);
}

.btn-action i {
    font-size: 0.9rem;
    position: relative;
    z-index: 1;
}

.btn-primary {
    background: var(--gradient-primary);
    color: var(--white);
}

.btn-primary:hover {
    background: var(--primary-blue-dark);
    color: var(--white);
    text-decoration: none;
}

.btn-secondary {
    background: linear-gradient(135deg, var(--gray-100) 0%, var(--gray-200) 100%);
    color: var(--gray-700);
    border: 1px solid var(--gray-300);
}

.btn-secondary:hover {
    background: linear-gradient(135deg, var(--gray-200) 0%, var(--gray-300) 100%);
    color: var(--gray-800);
    text-decoration: none;
}

.btn-secondary:disabled {
    background: linear-gradient(135deg, var(--gray-200) 0%, var(--gray-300) 100%);
    color: var(--gray-500);
    cursor: not-allowed;
    opacity: 0.7;
}

.btn-danger {
    background: var(--gradient-danger);
    color: var(--white);
}

.btn-danger:hover {
    background: var(--danger-red);
    color: var(--white);
    text-decoration: none;
}

.empty-state {
    text-align: center;
    padding: 100px 32px;
    color: var(--gray-500);
    position: relative;
    overflow: hidden;
}

.empty-state::before {
    content: '';
    position: absolute;
    top: -50%;
    left: 50%;
    width: 300px;
    height: 300px;
    background: var(--gradient-primary);
    border-radius: 50%;
    opacity: 0.03;
    transform: translate(-50%, -50%);
}

.empty-state i {
    font-size: 5rem;
    color: var(--gray-300);
    margin-bottom: 24px;
    position: relative;
    z-index: 1;
}

.empty-state h3 {
    font-size: 1.8rem;
    margin-bottom: 16px;
    color: var(--gray-700);
    font-weight: 700;
    position: relative;
    z-index: 1;
}

.empty-state p {
    font-size: 1.2rem;
    margin: 0;
    position: relative;
    z-index: 1;
    font-weight: 500;
}

/* Responsive Design */
@@media (max-width: 1200px) {
    .container {
        padding: 0 24px;
    }
    
    .notifications-header {
        padding: 36px;
    }
    
    .notifications-header h1 {
        font-size: 2.5rem;
    }
    
    .notification-item {
        padding: 24px;
    }
}

@@media (max-width: 768px) {
    .container {
        padding: 0 20px;
    }
    
    .notifications-header {
        padding: 28px;
    }
    
    .notifications-header h1 {
        font-size: 2rem;
        flex-direction: column;
        align-items: flex-start;
        gap: 12px;
    }
    
    .notifications-header h1 i {
        font-size: 2rem;
    }
    
    .notifications-header p {
        font-size: 1.1rem;
    }
    
    .notification-item {
        padding: 20px;
    }
    
    .notification-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 8px;
    }
    
    .notification-title {
        font-size: 1.1rem;
    }
    
    .notification-time {
        align-self: flex-start;
        font-size: 0.9rem;
    }
    
    /* Botones en móvil: mantener en fila pero ajustar tamaños */
    .notification-actions {
        gap: 8px;
        margin-top: 16px;
    }
    
    .btn-action {
        min-width: 90px;
        padding: 10px 12px;
        font-size: 0.8rem;
        height: 38px;
    }
    
    .empty-state {
        padding: 80px 24px;
    }
    
    .empty-state i {
        font-size: 4rem;
    }
    
    .empty-state h3 {
        font-size: 1.6rem;
    }
    
    .empty-state p {
        font-size: 1.1rem;
    }
}

@@media (max-width: 480px) {
    .notifications-header h1 {
        font-size: 1.8rem;
    }
    
    .notification-item {
        padding: 16px;
    }
    
    .notification-title {
        font-size: 1.05rem;
    }
    
    .notification-message {
        font-size: 0.95rem;
    }
    
    /* En pantallas muy pequeñas, los botones se apilan verticalmente */
    .notification-actions {
        flex-direction: column;
        gap: 8px;
        align-items: stretch;
    }
    
    .btn-action {
        width: 100%;
        min-width: 0;
        justify-content: center;
    }
}

/* Animaciones */
@@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.notifications-header {
    animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1);
}

.notification-item {
    animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.notification-item:nth-child(1) { animation-delay: 0.1s; }
.notification-item:nth-child(2) { animation-delay: 0.2s; }
.notification-item:nth-child(3) { animation-delay: 0.3s; }
.notification-item:nth-child(4) { animation-delay: 0.4s; }
.notification-item:nth-child(5) { animation-delay: 0.5s; }

/* Mejorar legibilidad en pantallas con zoom */
@@media (min-resolution: 120dpi) {
    body {
        font-size: 16px;
    }
    
    .notifications-header h1 {
        font-size: 2.6rem;
    }
    
    .notification-title {
        font-size: 1.2rem;
    }
    
    .notification-message {
        font-size: 1rem;
    }
    
    .btn-action {
        font-size: 0.9rem;
        padding: 10px 18px;
    }
}
