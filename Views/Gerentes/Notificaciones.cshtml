        text-align: center;
        color: #6b7280;
        font-size: 1rem;
        margin-top: 48px;
        margin-bottom: 24px;
        letter-spacing: 0.5px;
    }
</style>
}

<div class="container">
    <div class="notifications-header mb-4">
        <h1>
            <i class="fas fa-bell"></i>
            Centro de Notificaciones
        </h1>
        <p>Gestiona y revisa todas tus notificaciones del sistema</p>
    </div>
    <div class="notifications-list">
        @if (Model != null && Model.Any())
        {
            @foreach (var notificacion in Model)
            {
                <div class="notification-item @(notificacion.Leido ? "read" : "unread")" data-id="@notificacion.Id">
                    <div class="notification-header">
                        <h3 class="notification-title">
                            @if (!notificacion.Leido)
                            {
                                <i class="fas fa-circle"></i>
                            }
                            Notificación de Rendición
                        </h3>
                        <span class="notification-time">
                            @notificacion.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                        </span>
                    </div>
                    <div class="notification-message">
                        @notificacion.Mensaje
                    </div>
                    <div class="notification-actions">
                        @if (notificacion.RendicionId > 0)
                        {
                            <form asp-action="MarcarNotificacionLeidaYVer" asp-controller="Gerentes" method="post" style="display:inline;">
                                <input type="hidden" name="id" value="@notificacion.Id" />
                                <button type="submit" class="btn-action btn-primary">
                                    <i class="fas fa-eye"></i>
                                    Ver Detalle
                                </button>
                            </form>
                        }
                        <form asp-action="MarcarNotificacionLeida" asp-controller="Gerentes" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@notificacion.Id" />
                            <button type="submit" class="btn-action btn-secondary marcar-leida" @(notificacion.Leido ? "disabled" : "")>
                                <i class="fas fa-check"></i>
                                @(notificacion.Leido ? "Leída" : "Marcar como Leída")
                            </button>
                        </form>
                        <form asp-action="EliminarNotificacion" asp-controller="Home" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@notificacion.Id" />
                            <button type="submit" class="btn-action btn-danger eliminar-notificacion" data-id="@notificacion.Id">
                                <i class="fas fa-trash"></i>
                                Eliminar
                            </button>
                        </form>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="empty-state">
                <i class="fas fa-bell-slash"></i>
                <h3>No hay notificaciones</h3>
                <p>No tienes notificaciones pendientes en este momento.</p>
            </div>
        }
    </div>
</div>

<div class="footer-empty">
    Todos los derechos reservados
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        const userId = '@(ViewBag.UserId ?? "")';
        console.log("userId para SignalR:", userId);
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificacionesHub")
            .build();

        connection.start().then(function() {
            console.log("Conexión a SignalR establecida");
            if (userId) {
                connection.invoke("JoinUserGroup", userId).then(() => {
                    console.log("Unido al grupo de usuario:", userId);
                }).catch(err => {
                    console.error("Error al unirse al grupo:", err);
                });
            } else {
                console.warn("userId vacío, no se une a ningún grupo");
            }
        }).catch(function (err) {
            console.error("Error al conectar a SignalR:", err);
        });

        function formatDateTime(fechaIso) {
            const fecha = new Date(fechaIso);
            return fecha.toLocaleString('es-CL', { dateStyle: 'short', timeStyle: 'short' });
        }

        connection.on("NuevaNotificacion", function (notificacion) {
            console.log("Notificación recibida por SignalR:", notificacion);
            const lista = document.querySelector(".notifications-list");
            if (lista) {
                const div = document.createElement("div");
                div.className = "notification-item unread";
                div.innerHTML = `
                    <div class="notification-header">
                        <h3 class="notification-title">
                            <i class="fas fa-circle"></i>
                            Notificación de Rendición
                        </h3>
                        <span class="notification-time">Ahora</span>
                    </div>
                    <div class="notification-message">${notificacion.Mensaje}</div>
                `;
                lista.prepend(div);
                div.style.background = "#e0f2fe";
                setTimeout(() => { div.style.background = ""; }, 2000);
                const badge = document.querySelector('.badge');
                if (badge) {
                    let count = parseInt(badge.textContent) || 0;
                    badge.textContent = count + 1;
                    badge.style.display = '';
                }
            }
            if (window.Notification && Notification.permission === "granted") {
                new Notification("Nueva notificación", { body: notificacion.Mensaje });
            } else if (window.Notification && Notification.permission !== "denied") {
                Notification.requestPermission();
            }
        });

        $(document).ready(function() {
            $('.marcar-leida').click(function(e) {
                e.preventDefault();
                var $btn = $(this);
                var $item = $btn.closest('.notification-item');
                var notificacionId = $item.data('id');
                $.ajax({
                    url: '/Gerentes/MarcarNotificacionLeida',
                    type: 'POST',
                    data: { id: notificacionId },
                    success: function(response) {
                        if (response.success) {
                            $item.removeClass('unread').addClass('read');
                            $btn.prop('disabled', true).text('Leída');
                        }
                    },
                    error: function() {
                        alert('Error al marcar la notificación como leída');
                    }
                });
            });

            // Eliminar notificación
            $('.eliminar-notificacion').click(function() {
                if (!confirm('¿Estás seguro de que quieres eliminar esta notificación?')) {
                    return;
                }
                var notificacionId = $(this).data('id');
                var $item = $(this).closest('.notification-item');
                $.ajax({
                    url: '@Url.Action("EliminarNotificacion", "Home")',
                    type: 'POST',
                    data: { id: notificacionId },
                    success: function(response) {
                        if (response.success) {
                            $item.fadeOut(300, function() {
                                $(this).remove();
                                if ($('.notification-item').length === 0) {
                                    $('.notifications-list').html(`
                                        <div class="empty-state">
                                            <i class="fas fa-bell-slash"></i>
                                            <h3>No hay notificaciones</h3>
                                            <p>No tienes notificaciones pendientes en este momento.</p>
                                        </div>
                                    `);
                                }
                            });
                        } else {
                            alert('Error al eliminar la notificación');
                        }
                    },
                    error: function() {
                        alert('Error al eliminar la notificación');
                    }
                });
            });
        });
    </script>
}