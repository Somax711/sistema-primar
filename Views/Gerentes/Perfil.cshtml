@model RendicionesPrimar.Models.ViewModels.InformacionPersonalViewModel
@{
    ViewData["Title"] = "Mi Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Copia literal del header/navbar de AyudaGerente -->
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Mi Perfil - Sistema de Rendiciones | Primar S.A.</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
    :root {
        --primar-primary:rgb(31, 90, 136);
        --primar-primary-dark:rgb(31, 90, 136);
        --primar-primary-light: rgb(31, 90, 136);
        --primar-secondary: #f1f5f9;
        --primar-success: #10b981;
        --primar-warning: #f59e0b;
        --primar-danger: #ef4444;
        --primar-info: #06b6d4;
        --primar-text: #1e293b;
        --primar-text-light: #64748b;
        --primar-background: #f8fafc;
        --primar-white: #ffffff;
        --primar-border: #e2e8f0;
        --primar-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
        --primar-shadow-hover: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --primar-radius: 12px;
        --primar-radius-sm: 8px;
        --primar-transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
        --primar-gradient: linear-gradient(135deg, var(--primar-primary) 0%, var(--primar-primary-light) 100%);
    }
    * { margin: 0; padding: 0; box-sizing: border-box; }
    body {
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: var(--primar-background);
        color: var(--primar-text);
        line-height: 1.6;
        font-size: 15px;
        font-weight: 400;
    }
    .app-container { min-height: 100vh; display: flex; flex-direction: column; }
    .header { background: var(--primar-gradient); box-shadow: var(--primar-shadow); position: sticky; top: 0; z-index: 1000; }
    .header-content { max-width: 1400px; margin: 0 auto; padding: 0 24px; display: flex; justify-content: space-between; align-items: center; height: 70px; }
    .brand { display: flex; align-items: center; color: white; gap: 12px; }
    .brand i { font-size: 1.5rem; }
    .brand-text h1 { font-size: 1.25rem; font-weight: 700; margin: 0; line-height: 1.2; }
    .brand-text span { font-size: 0.75rem; opacity: 0.9; font-weight: 400; }
    .nav { display: flex; align-items: center; gap: 8px; }
    .nav-link {
        color: rgba(255,255,255,0.95);
        text-decoration: none;
        padding: 10px 16px;
        border-radius: var(--primar-radius-sm);
        font-weight: 500;
        font-size: 0.78rem;
        transition: var(--primar-transition);
        display: flex;
        align-items: center;
        gap: 8px;
        position: relative;
    }
    .nav-link:hover { color: white; background-color: rgba(255,255,255,0.15); text-decoration: none; }
    .nav-link.active { background-color: rgba(255,255,255,0.2); color: white; }
    .badge { position: absolute; top: -4px; right: -4px; background: var(--primar-danger); color: white; font-size: 0.7rem; font-weight: 600; padding: 2px 6px; border-radius: 10px; min-width: 18px; text-align: center; }
    .user-section { display: flex; align-items: center; gap: 16px; padding-left: 24px; border-left: 1px solid rgba(255,255,255,0.2); }
    .user-info { color: white; text-align: right; }
    .user-name { display: block; font-weight: 500; font-size: 0.9rem; }
    .user-role { display: inline-block; font-size: 0.7rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.05em; padding: 2px 8px; border-radius: 12px; margin-top: 2px; }
    .role-gerente { background: rgba(16, 185, 129, 0.3); }
    .btn-logout { background: rgba(255,255,255,0.15); border: 1px solid rgba(255,255,255,0.2); color: white; padding: 8px 16px; border-radius: var(--primar-radius-sm); font-size: 0.9rem; font-weight: 500; cursor: pointer; transition: var(--primar-transition); display: flex; align-items: center; gap: 8px; }
    .btn-logout:hover { background: rgba(255,255,255,0.25); }
    .main { flex: 1; padding: 40px 0; }
    .container { max-width: 1400px; margin: 0 auto; padding: 0 24px; }
    @@media (max-width: 768px) {
        .header-content { flex-direction: column; height: auto; padding: 16px 24px; gap: 16px; }
        .nav { flex-wrap: wrap; justify-content: center; }
        .user-section { border-left: none; border-top: 1px solid rgba(255,255,255,0.2); padding-left: 0; padding-top: 16px; }
        .main { padding: 24px 0; }
        .container { padding: 0 16px; }
    }
    @@media (max-width: 480px) {
        .container { padding: 0 12px; }
        .brand { flex-direction: column; gap: 4px; text-align: center; }
        .nav { flex-direction: column; gap: 8px; }
        .user-section { flex-direction: column; gap: 12px; }
    }
    .perfil-card {
        max-width: 540px;
        margin: 40px auto 40px auto;
        border-radius: 18px;
        box-shadow: 0 4px 24px rgba(31,90,136,0.10);
        background: #fff;
        border: 1px solid #e2e8f0;
        padding: 0;
    }
    .perfil-header {
        background: rgb(31, 90, 136);
        color: #fff;
        border-radius: 18px 18px 0 0;
        padding: 32px 32px 18px 32px;
        text-align: center;
    }
    .perfil-header .fa-user-tie {
        font-size: 2.7rem;
        margin-bottom: 8px;
    }
    .perfil-nombre {
        font-size: 1.35rem;
        font-weight: 700;
        margin-bottom: 0;
        letter-spacing: 0.5px;
    }
    .perfil-rol {
        font-size: 1.05rem;
        color: #e0e7ef;
        margin-bottom: 0;
    }
    .perfil-form {
        padding: 32px 32px 24px 32px;
    }
    .perfil-form .form-row {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }
    .perfil-form .form-group {
        width: 100%;
    }
    .perfil-form .form-group label {
        font-weight: 600;
        color: #1e293b;
        margin-bottom: 6px;
    }
    .perfil-form .form-control {
        border-radius: 8px;
        font-size: 1.08rem;
        padding: 8px 12px;
        margin-bottom: 0;
        border: 1.5px solid #e2e8f0;
        transition: border-color 0.2s;
        width: 100%;
        box-sizing: border-box;
    }
    .perfil-form .form-control:focus {
        border-color: rgb(31, 90, 136);
        box-shadow: 0 0 0 2px #e0e7ef;
    }
    .perfil-form .btn-row {
        display: flex;
        gap: 16px;
        margin-top: 24px;
        justify-content: stretch;
    }
    .perfil-form .btn-primary, .perfil-form .btn-outline {
        flex: 1 1 0;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        height: 44px;
        min-width: 0;
        padding: 0 22px;
        font-size: 1rem;
        font-weight: 700;
        border-radius: 8px;
        white-space: nowrap;
        justify-content: center;
    }
    .perfil-form .btn-primary {
        background: rgb(31, 90, 136);
        color: #fff;
        border: none;
        box-shadow: 0 2px 8px rgba(31,90,136,0.07);
        transition: background 0.18s;
    }
    .perfil-form .btn-primary:hover {
        background: #23608e;
    }
    .perfil-form .btn-outline {
        background: #fff;
        color: rgb(31, 90, 136);
        border: 2px solid rgb(31, 90, 136);
        box-shadow: none;
        transition: background 0.18s, color 0.18s;
    }
    .perfil-form .btn-outline:hover {
        background: #f1f5f9;
        color: #23608e;
    }
    @@media (max-width: 600px) {
        .perfil-card, .perfil-form {
            padding: 16px !important;
        }
        .perfil-header {
            padding: 18px 8px 10px 8px;
        }
        .perfil-form .form-row {
            flex-direction: column;
            gap: 8px;
        }
        .perfil-form .btn-row {
            flex-direction: column;
            gap: 10px;
            align-items: stretch;
        }
        .perfil-form .btn-primary, .perfil-form .btn-outline {
            min-width: 0;
            width: 100%;
        }
    }
    .alert-success {
        background: #e6f9f0;
        color: #17835a;
        border: 1.5px solid #b6f0d5;
        border-radius: 10px;
        font-size: 1.08rem;
        font-weight: 600;
        padding: 14px 18px;
        margin-bottom: 18px;
        display: flex;
        align-items: center;
        gap: 10px;
        box-shadow: 0 2px 8px rgba(16,185,129,0.07);
    }
    .alert-success .fa-check-circle {
        font-size: 1.4rem;
        color: #10b981;
    }
    .footer-empty {
        text-align: center;
        color: #6b7280;
        font-size: 1rem;
        margin-top: 48px;
        margin-bottom: 24px;
        letter-spacing: 0.5px;
    }
</style>
</head>
<body>
                <div class="perfil-card">
                    <div class="perfil-header">
                        <i class="fas fa-user-tie"></i>
                        <div class="perfil-nombre">@Model.Nombre @Model.Apellidos</div>
                        <div class="perfil-rol">Gerente</div>
                    </div>
                    <div class="perfil-form">
                        @if (TempData["SuccessMessage"] != null && (TempData["SuccessMessage"].ToString().ToLower().Contains("perfil") || TempData["SuccessMessage"].ToString().ToLower().Contains("cambio")))
                        {
                            <div class="alert alert-success"><i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]</div>
                        }
                        <form asp-action="PerfilFijo" method="post" autocomplete="off">
                            @Html.AntiForgeryToken()
                            <div class="form-row">
                                <div class="form-group">
                                    <label asp-for="Nombre">Nombre</label>
                                    <input asp-for="Nombre" class="form-control" placeholder="Nombre" />
                                    <span asp-validation-for="Nombre" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Apellidos">Apellido</label>
                                    <input asp-for="Apellidos" class="form-control" placeholder="Apellido" />
                                    <span asp-validation-for="Apellidos" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Rut">RUT</label>
                                    <input asp-for="Rut" class="form-control" placeholder="RUT" />
                                    <span asp-validation-for="Rut" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Email">Correo electrónico</label>
                                    <input asp-for="Email" class="form-control" placeholder="Correo electrónico" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Telefono">Teléfono</label>
                                    <input asp-for="Telefono" class="form-control" placeholder="Teléfono" />
                                    <span asp-validation-for="Telefono" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Cargo">Cargo</label>
                                    <input asp-for="Cargo" class="form-control" placeholder="Cargo" />
                                    <span asp-validation-for="Cargo" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Departamento">Departamento</label>
                                    <input asp-for="Departamento" class="form-control" placeholder="Departamento" />
                                    <span asp-validation-for="Departamento" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="btn-row">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fas fa-save"></i> Guardar Cambios
                                </button>
                                <a asp-controller="Account" asp-action="CambiarContrasenaGerente" class="btn btn-outline">
                                    <i class="fas fa-key"></i> Cambiar Contraseña
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>
<div class="footer-empty">
    Todos los derechos reservados
</div>
</body>
</html> 