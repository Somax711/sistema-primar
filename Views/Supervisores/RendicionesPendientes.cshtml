@model IEnumerable<RendicionesPrimar.Models.Rendicion>
@{
    ViewData["Title"] = "Rendiciones Pendientes";
    Layout = "_Layout";
}

<style>
    :root {
        --primary-blue: #215c8e;
        --primary-blue-light: #357ab7;
        --primary-blue-dark: #1a4b73;
        --accent-teal: #215c8e;
        --accent-teal-light: #357ab7;
        --success-green: #059669;
        --success-green-light: #10b981;
        --warning-orange: #d97706;
        --warning-orange-light: #f59e0b;
        --danger-red: #dc2626;
        --danger-red-light: #ef4444;
        --gray-50: #f9fafb;
        --gray-100: #f3f4f6;
        --gray-200: #e5e7eb;
        --gray-300: #d1d5db;
        --gray-500: #6b7280;
        --gray-600: #4b5563;
        --gray-700: #374151;
        --gray-800: #1f2937;
        --gray-900: #111827;
        --white: #ffffff;
        --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
        --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
        --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        --radius-sm: 6px;
        --radius-md: 8px;
        --radius-lg: 12px;
        --radius-xl: 16px;
        --radius-2xl: 20px;
        --gradient-primary: linear-gradient(135deg, #215c8e 0%, #357ab7 100%);
        --gradient-accent: linear-gradient(135deg, #215c8e 0%, #357ab7 100%);
        --gradient-success: linear-gradient(135deg, var(--success-green) 0%, var(--success-green-light) 100%);
        --gradient-warning: linear-gradient(135deg, var(--warning-orange) 0%, var(--warning-orange-light) 100%);
        --gradient-danger: linear-gradient(135deg, var(--danger-red) 0%, var(--danger-red-light) 100%);
        --gradient-background: linear-gradient(135deg, var(--gray-50) 0%, #f1f5f9 100%);
    }

    body {
        background: var(--gradient-background);
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        line-height: 1.6;
        color: var(--gray-800);
    }

    .container-fluid {
        padding: 32px;
        background: var(--gradient-background);
        min-height: 100vh;
    }

    .row {
        max-width: 1400px;
        margin: 0 auto;
    }

    .page-header {
        background: var(--white);
        border-radius: var(--radius-2xl);
        box-shadow: var(--shadow-xl);
        padding: 40px;
        margin-bottom: 40px;
        border: 1px solid var(--gray-200);
        position: relative;
        overflow: hidden;
    }

    .page-header::before {
        content: '';
        position: absolute;
        top: -60%;
        right: -30%;
        width: 400px;
        height: 400px;
        background: var(--gradient-primary);
        border-radius: 50%;
        opacity: 0.06;
        transform: rotate(25deg);
    }

    .page-header::after {
        content: '';
        position: absolute;
        bottom: -30%;
        left: -20%;
        width: 200px;
        height: 200px;
        background: var(--gradient-accent);
        border-radius: 50%;
        opacity: 0.04;
        transform: rotate(-45deg);
    }

    .page-header h2 {
        font-size: 2.5rem;
        font-weight: 800;
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0;
        position: relative;
        z-index: 1;
        display: flex;
        align-items: center;
        gap: 20px;
    }

    .page-header h2 i {
        background: var(--gradient-primary);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        font-size: 2.2rem;
        animation: clockSpin 4s ease-in-out infinite;
    }

    @@keyframes clockSpin {
        0%, 100% { transform: rotate(0deg); }
        25% { transform: rotate(15deg); }
        75% { transform: rotate(-15deg); }
    }

    .empty-state {
        background: var(--white);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-lg);
        padding: 48px;
        border: 1px solid var(--gray-200);
        display: flex;
        align-items: center;
        gap: 24px;
        position: relative;
        overflow: hidden;
    }

    .empty-state::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -25%;
        width: 300px;
        height: 300px;
        background: var(--gradient-primary);
        border-radius: 50%;
        opacity: 0.03;
        transform: rotate(45deg);
    }

    .empty-state-icon {
        font-size: 3.5rem;
        color: var(--primary-blue);
        display: flex;
        align-items: center;
        justify-content: center;
        position: relative;
        z-index: 1;
    }

    .empty-state-content {
        flex: 1;
        position: relative;
        z-index: 1;
    }

    .empty-state-title {
        font-size: 1.6rem;
        font-weight: 700;
        color: var(--primary-blue);
        margin-bottom: 8px;
    }

    .empty-state-description {
        color: var(--gray-600);
        font-size: 1.1rem;
        margin: 0;
        font-weight: 500;
    }

    .card-table {
        background: var(--white);
        border-radius: var(--radius-2xl);
        box-shadow: var(--shadow-xl);
        padding: 0;
        margin-bottom: 40px;
        border: 1px solid var(--gray-200);
        overflow: hidden;
    }

    .table-rendiciones {
        width: 100%;
        border-collapse: collapse;
        font-size: 1rem;
        background: var(--white);
        margin: 0;
        border-radius: var(--radius-lg);
        overflow: hidden;
    }

    .table-rendiciones thead th {
        background: #215c8e;
        color: var(--white);
        font-weight: 600;
        padding: 16px 12px;
        border: none;
        font-size: 1rem;
        text-align: center;
    }

    .table-rendiciones tbody td {
        background: var(--white);
        padding: 16px 12px;
        border-bottom: 1px solid var(--gray-200);
        font-size: 0.95rem;
        color: var(--gray-700);
        vertical-align: middle;
        text-align: center;
        font-weight: 500;
    }

    .table-rendiciones tbody tr:nth-child(odd) td {
        background: #f8fafc;
    }

    .table-rendiciones tbody tr:hover td {
        background: #e0f2fe;
        transition: background 0.2s ease;
    }

    .table-rendiciones tbody tr:last-child td {
        border-bottom: none;
    }

    .badge-ticket {
        background: #215c8e;
        color: var(--white);
        font-weight: 600;
        border-radius: var(--radius-sm);
        padding: 6px 12px;
        font-size: 0.9rem;
        display: inline-block;
        font-family: 'Courier New', monospace;
    }

    .badge-monto {
        background: #10b981;
        color: var(--white);
        font-weight: 600;
        border-radius: var(--radius-sm);
        padding: 6px 12px;
        font-size: 0.9rem;
        display: inline-block;
    }

    .badge-estado {
        background: #f59e0b;
        color: var(--white);
        font-weight: 600;
        border-radius: var(--radius-sm);
        padding: 6px 12px;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .badge-estado i {
        font-size: 0.8rem;
    }

    .btn-ver-detalle {
        background: #215c8e;
        color: var(--white);
        font-weight: 600;
        border-radius: var(--radius-sm);
        padding: 8px 16px;
        font-size: 0.9rem;
        border: none;
        transition: all 0.2s ease;
        display: inline-flex;
        align-items: center;
        gap: 6px;
        text-decoration: none;
        cursor: pointer;
    }

    .btn-ver-detalle:hover {
        background: #357ab7;
        color: var(--white);
        text-decoration: none;
    }

    .btn-ver-detalle i {
        font-size: 0.9rem;
        position: relative;
        z-index: 1;
    }

    .employee-cell {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-weight: 600;
    }

    .employee-cell i {
        color: var(--primary-blue);
        font-size: 0.9rem;
    }

    .date-cell {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        font-weight: 500;
    }

    .date-cell i {
        color: var(--primary-blue);
        font-size: 0.9rem;
    }

    .title-cell {
        text-align: left !important;
        max-width: 250px;
    }

    .title-main {
        font-weight: 700;
        color: var(--gray-800);
        font-size: 1rem;
        margin-bottom: 4px;
    }

    .title-description {
        color: var(--gray-500);
        font-size: 0.9rem;
        font-weight: 400;
        line-height: 1.4;
    }

    /* Modal Styles */
    .modal.fade {
        display: none;
        position: fixed;
        z-index: 2000;
        left: 0;
        top: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.6);
        align-items: center;
        justify-content: center;
        backdrop-filter: blur(4px);
    }

    .modal.fade.show {
        display: flex !important;
    }

    .modal-dialog {
        max-width: 450px;
        margin: auto;
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-xl);
        background: none;
        animation: modalSlideIn 0.3s ease-out;
    }

    @@keyframes modalSlideIn {
        from {
            opacity: 0;
            transform: translateY(-20px) scale(0.95);
        }
        to {
            opacity: 1;
            transform: translateY(0) scale(1);
        }
    }

    .modal-content {
        background: var(--white);
        border-radius: var(--radius-xl);
        box-shadow: var(--shadow-xl);
        border: 1px solid var(--gray-200);
        padding: 0;
        overflow: hidden;
    }

    .modal-header {
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 24px 28px 16px 28px;
        border-bottom: 1px solid var(--gray-200);
        background: linear-gradient(135deg, var(--gray-50) 0%, var(--white) 100%);
    }

    .modal-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: var(--gray-800);
        margin: 0;
    }

    .close {
        background: var(--gray-100);
        border: none;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.4rem;
        color: var(--gray-500);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .close:hover {
        background: var(--gray-200);
        color: var(--danger-red);
        transform: rotate(90deg);
    }

    .modal-body {
        padding: 24px 28px;
        color: var(--gray-700);
        font-size: 1.1rem;
        line-height: 1.6;
    }

    .modal-body p {
        margin: 0 0 16px 0;
    }

    .alert-warning {
        color: var(--danger-red);
        background: linear-gradient(135deg, #fef2f2 0%, #fff5f5 100%);
        font-size: 0.95rem;
        margin: 16px 0 0 0;
        display: flex;
        align-items: center;
        gap: 10px;
        font-weight: 600;
        padding: 12px 16px;
        border-radius: var(--radius-md);
        border: 1px solid #fecaca;
    }

    .modal-footer {
        display: flex;
        gap: 12px;
        justify-content: flex-end;
        padding: 16px 28px 24px 28px;
        background: linear-gradient(135deg, var(--gray-50) 0%, var(--white) 100%);
        border-top: 1px solid var(--gray-200);
    }

    .btn.btn-secondary,
    .btn.btn-danger {
        border-radius: var(--radius-md);
        font-weight: 600;
        font-size: 0.95rem;
        padding: 12px 24px;
        min-width: 120px;
        box-shadow: var(--shadow-sm);
        transition: all 0.3s ease;
        border: none;
        cursor: pointer;
    }

    .btn.btn-secondary {
        background: linear-gradient(135deg, var(--gray-100) 0%, var(--gray-200) 100%);
        color: var(--gray-700);
        border: 1px solid var(--gray-300);
    }

    .btn.btn-secondary:hover {
        background: linear-gradient(135deg, var(--gray-200) 0%, var(--gray-300) 100%);
        color: var(--gray-800);
        transform: translateY(-1px);
        box-shadow: var(--shadow-md);
    }

    .btn.btn-danger {
        background: var(--gradient-danger);
        color: var(--white);
    }

    .btn.btn-danger:hover {
        background: var(--danger-red);
        color: var(--white);
        transform: translateY(-1px);
        box-shadow: var(--shadow-md);
    }

    /* Responsive Design */
    @@media (max-width: 1200px) {
        .container-fluid {
            padding: 24px;
        }

        .page-header {
            padding: 32px;
        }

        .page-header h2 {
            font-size: 2.2rem;
        }

        .empty-state {
            padding: 36px;
        }
    }

    @@media (max-width: 768px) {
        .container-fluid {
            padding: 16px;
        }

        .page-header {
            padding: 24px;
        }

        .page-header h2 {
            font-size: 1.8rem;
            flex-direction: column;
            align-items: flex-start;
            gap: 12px;
        }

        .page-header h2 i {
            font-size: 1.6rem;
        }

        .empty-state {
            flex-direction: column;
            text-align: center;
            gap: 16px;
            padding: 32px 20px;
        }

        .empty-state-title {
            font-size: 1.4rem;
        }

        .empty-state-description {
            font-size: 1rem;
        }

        .card-table {
            overflow-x: auto;
        }

        .table-rendiciones {
            min-width: 800px;
        }

        .table-rendiciones thead th,
        .table-rendiciones tbody td {
            padding: 12px 8px;
            font-size: 0.9rem;
        }

        .title-cell {
            max-width: 200px;
        }

        .badge-ticket,
        .badge-monto,
        .badge-estado {
            padding: 6px 12px;
            font-size: 0.8rem;
        }

        .btn-ver-detalle {
            padding: 8px 16px;
            font-size: 0.85rem;
        }

        .modal-dialog {
            margin: 20px;
            max-width: calc(100% - 40px);
        }

        .modal-header,
        .modal-body,
        .modal-footer {
            padding: 20px;
        }
    }

    @@media (max-width: 480px) {
        .page-header h2 {
            font-size: 1.6rem;
        }

        .table-rendiciones {
            min-width: 700px;
        }

        .table-rendiciones thead th,
        .table-rendiciones tbody td {
            padding: 10px 6px;
            font-size: 0.85rem;
        }

        .title-cell {
            max-width: 150px;
        }

        .btn.btn-secondary,
        .btn.btn-danger {
            padding: 10px 20px;
            font-size: 0.9rem;
            min-width: 100px;
        }
    }

    /* Animaciones */
    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .page-header {
        animation: fadeInUp 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .card-table,
    .empty-state {
        animation: fadeInUp 0.6s cubic-bezier(0.4, 0, 0.2, 1);
        animation-delay: 0.2s;
        animation-fill-mode: both;
    }

    .table-rendiciones tbody tr {
        animation: fadeInUp 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .table-rendiciones tbody tr:nth-child(1) { animation-delay: 0.1s; }
    .table-rendiciones tbody tr:nth-child(2) { animation-delay: 0.2s; }
    .table-rendiciones tbody tr:nth-child(3) { animation-delay: 0.3s; }
    .table-rendiciones tbody tr:nth-child(4) { animation-delay: 0.4s; }
    .table-rendiciones tbody tr:nth-child(5) { animation-delay: 0.5s; }

    /* Mejorar legibilidad en pantallas con zoom */
    @@media (min-resolution: 120dpi) {
        body {
            font-size: 16px;
        }
        
        .page-header h2 {
            font-size: 2.2rem;
        }
        
        .table-rendiciones {
            font-size: 0.9rem;
        }
        
        .btn-ver-detalle {
            font-size: 0.85rem;
        }
        
        .badge-ticket,
        .badge-monto,
        .badge-estado {
            font-size: 0.85rem;
        }
    }

    .footer-empty {
        text-align: center;
        color: #6b7280;
        font-size: 1rem;
        margin-top: 48px;
        margin-bottom: 24px;
        letter-spacing: 0.5px;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-header">
                <h2>
                    <i class="fas fa-clock"></i>
                    Rendiciones Pendientes de Aprobación
                </h2>
            </div>
            
            @if (!Model.Any())
            {
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-inbox"></i>
                    </div>
                    <div class="empty-state-content">
                        <div class="empty-state-title">Sin rendiciones pendientes</div>
                        <div class="empty-state-description">No hay rendiciones pendientes de aprobación en este momento.</div>
                    </div>
                </div>
            }
            else
            {
                <div class="card-table">
                    <table class="table-rendiciones">
                        <thead>
                            <tr>
                                <th>Ticket</th>
                                <th>Empleado</th>
                                <th>Título</th>
                                <th>Monto</th>
                                <th>Fecha</th>
                                <th>Estado</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var rendicion in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge-ticket">@rendicion.NumeroTicket</span>
                                    </td>
                                    <td>
                                        <div class="employee-cell">
                                            <i class="fas fa-user"></i>
                                            @rendicion.Usuario?.Nombre
                                        </div>
                                    </td>
                                    <td class="title-cell">
                                        <div class="title-main">@rendicion.Titulo</div>
                                        <div class="title-description">@rendicion.Descripcion</div>
                                    </td>
                                    <td>
                                        <span class="badge-monto">$@rendicion.MontoTotal.ToString("N0")</span>
                                    </td>
                                    <td>
                                        <div class="date-cell">
                                            <i class="fas fa-calendar"></i>
                                            @rendicion.FechaCreacion.ToString("dd-MM-yyyy")
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge-estado">
                                            <i class="fas fa-clock"></i>
                                            Pendiente
                                        </span>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("Detalle", "Rendiciones", new { id = rendicion.Id })" class="btn-ver-detalle">
                                            <i class="fas fa-eye"></i>
                                            Ver Detalle
                                        </a>
                                        @if (rendicion.Estado == "rechazado" || rendicion.Estado == "aprobado_2")
                                        {
                                            <button type="button" class="btn btn-danger" onclick="confirmarEliminacion(@rendicion.Id, '@rendicion.NumeroTicket')">Eliminar</button>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<div class="footer-empty">
    Todos los derechos reservados
</div>

@section Scripts {
    <!-- Eliminados scripts de aprobar/rechazar -->
}

<!-- Modal de Confirmación -->
<div id="modalEliminar" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar Eliminación</h5>
                <button type="button" class="close" onclick="cerrarModal()">
                    <span>&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>¿Estás seguro de que deseas eliminar la rendición <strong id="ticketEliminar"></strong>?</p>
                <div class="alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    Esta acción no se puede deshacer.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="cerrarModal()">Cancelar</button>
                <button type="button" class="btn btn-danger" onclick="eliminarRendicion()">Eliminar</button>
            </div>
        </div>
    </div>
</div>

<script>
let rendicionIdAEliminar = null;

function confirmarEliminacion(id, ticket) {
    rendicionIdAEliminar = id;
    document.getElementById('ticketEliminar').textContent = ticket;
    $('#modalEliminar').modal('show');
}

function cerrarModal() {
    $('#modalEliminar').modal('hide');
    rendicionIdAEliminar = null;
}

function eliminarRendicion() {
    if (!rendicionIdAEliminar) return;

    fetch('@Url.Action("EliminarRendicion", "Rendiciones")', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/x-www-form-urlencoded',
        },
        body: 'id=' + rendicionIdAEliminar
    })
    .then(async response => {
        let data;
        try {
            data = await response.json();
        } catch (e) {
            $('#modalEliminar').modal('hide');
            // No mostrar ningún alert de error inesperado
            return;
        }
        $('#modalEliminar').modal('hide');
        if (data.success) {
            alert(data.message);
            window.location.reload();
        } else {
            alert('Error: ' + data.message);
        }
    })
    .catch(error => {
        $('#modalEliminar').modal('hide');
        alert('Error al eliminar la rendición: ' + error.message);
    });
}
</script>